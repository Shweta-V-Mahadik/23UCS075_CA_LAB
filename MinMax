#include<stdio.h>

int *MinMax(int num[], int size)
{
	int min, max, res[2], i;
	min = max = num[0];
	for(i = 0; i < size; i++)
	{
		if(num[i] < min)
			min = num[i];
		if(num[i] > max)
			max = num[i];
	}
	res[0] = min;
	res[1] = max;
	return res;
}

int main()
{
	int num[5], size, i;
	int *res;
	printf("\nEnter array size : ");
	scanf("%d",&size);
	printf("\nEnter array data : ");
	for(i = 0; i < size; i++)
	{
		scanf("%d",&num[i]);
	}
	printf("\nArray Data\n");
	for(i = 0; i < size; i++)
	{
		printf("%4d",num[i]);                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                             
	}
	res = MinMax(num, size);
	printf("\nMin = %d",res[0]);
	printf("\nMax = %d",res[1]);
	
	return 0;
	
}
